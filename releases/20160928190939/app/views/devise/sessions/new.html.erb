<% content_for :title, "Welcome" %>
<div class="center-block accountformcontainer">
  <h1>Log in</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), validate: true) do |f| %>
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <%- end -%>
    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder => "Email Adress" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
    </div>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field rememberme">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
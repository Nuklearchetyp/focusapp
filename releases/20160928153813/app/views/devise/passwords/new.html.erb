<% content_for :title, "Settings" %>
<div class="center-block accountformcontainer">
	<h1>Forgot your password?</h1>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :validate => true) do |f| %>
	<%= devise_error_messages! %>
	<div class="field">
		<%= f.email_field :email, autofocus: true, :placeholder => "Password"  %>
	</div>

	<div class="actions">
		<%= f.submit "Send instructions" %>
	</div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
	
<% content_for :title, "Users" %>

<h1>Registered Users</h1>
<table class="table table-hover table-condensed">
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
        <th>Role</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @users.each do |user| %>
    		<tr>
    			<td>
    				<%= user.first_name %>
    			</td>
    			<td>
    				<%= user.last_name %>
    			</td>
    			<td>
    				<%= link_to user.email, user_path(:id => user.id )  %>
    			</td>
                <td>
                    <%= user.role.name %>
                </td>
    			<td>
    				<button class="btn btn-primary userbutton">
    					<i class="fa fa-envelope-o" aria-hidden="true"> </i>
    				</button>
    			</td>
    		</tr>
		<% end %>
	</tbody>
</table>
<% content_for :title, "Resend" %>
<div class="center-block accountformcontainer">
	<h1>Resend confirmation instructions</h1>
	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, :validate => true) do |f| %>
  	<%= devise_error_messages! %>

	<div class="field">
	    <%= f.email_field :email, autofocus: true, :placeholder => "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %> 
	</div>

	<div class="actions">
		<%= f.submit "Resend instructions" %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>